<%= link_to("Back to Home", books_path, :class => 'back_link') %>

<div class="books edit">
  <h2>Update Book</h2>

  <%= form_for(@book) do |f| %>

    <table summary="Book form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:Title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:Author) %></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%= f.text_field(:Genre) %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.text_field(:Price) %></td>
      </tr>
      <tr>
        <th>Date Published</th>
        <td><%= f.text_field(:Publish) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update Book") %>
    </div>

  <% end %>
</div>
